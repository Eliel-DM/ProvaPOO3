<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="elieldm.provapoo.controller.DisciplinaController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Cadastro de Disciplinas"/>

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtNome" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Descrição:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextArea fx:id="txtDescricao" prefRowCount="3" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Curso:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="cmbCurso" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Professores:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <ComboBox fx:id="cmbProfessor" prefWidth="150.0" promptText="Selecione Professor"/>
            <Button text="Add" onAction="#handleAddProfessor"/>
            <Button text="Remover Selecionado" onAction="#handleRemoveProfessor"/>
        </HBox>

        <Label fx:id="lblProfessoresSelecionados" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Button text="Novo" onAction="#handleNew"/>
        <Button text="Salvar" onAction="#handleSave"/>
        <Button text="Excluir" onAction="#handleDelete"/>
        <Button text="Limpar" onAction="#handleClear"/>
        <Button text="Listar Todos" onAction="#handleListAll"/>
    </HBox>

    <TableView fx:id="tableViewDisciplinas" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50.0" text="ID"/>
            <TableColumn fx:id="colNome" prefWidth="150.0" text="Nome"/>
            <TableColumn fx:id="colDescricao" prefWidth="250.0" text="Descrição"/>
            <TableColumn fx:id="colCurso" prefWidth="150.0" text="Curso"/>
            <TableColumn fx:id="colProfessores" prefWidth="150.0" text="Professores"/>
        </columns>
    </TableView>
</VBox>